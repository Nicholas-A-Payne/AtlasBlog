@using AtlasBlog1.Models
@using AtlasBlog1.Services.Interfaces

@model IEnumerable<Blog>

@inject IImageService _imageService

@{
    ViewData["Title"] = "Index";
}
<div class="container">  
        <div class="row">
            <div class="col-12 d-flex justify-content-center"><h1 class="fw-bolder blogTitlePage">Blogs</h1></div>
            <div class="col-12 d-flex justify-content-center">
                @if (User.IsInRole("Administrator"))
                {
                    <p>
                        <a class="btn btn-primary btn-lg btn-outline-dark " asp-action="Create">Create New</a>
                    </p>
                }
            </div>
        </div>
</div>


<div class="row">
    <div class="mt-3 card-group border-dark">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-4 mb-5">
                <div class="card border-dark h-50">
                    <div class="">
                        <img class="card-img-top h-60" src=@_imageService.ConvertByteArrayToFile(item.ImageData, item.ImageType) />
                    </div>

                    <div class="card-body h-30">
                        <div class="card-title d-flex justify-content-center"> <h3>@Html.DisplayFor(modelItem => item.BlogName)</h3></div>
                        <div class="card-text d-flex justify-content-center">@Html.DisplayFor(modelItem => item.Description)</div>
                    </div>
                    <div class="card-footer border-dark">
                        <div class="row">
                            <div class="col-12 col-lg-6 d-flex justify-content-center justify-content-lg-start"> @item.Created.ToString("MMM dd, yyyy")</div>
                            <div class="col-12 col-lg-6 d-flex justify-content-center justify-content-lg-end">
                                @if (User.IsInRole("Administrator"))
                                {
                                    <a class="mx-2" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                }
                                ||
                                <a class="mx-2" asp-action="Details" asp-route-slug="@item.Id">Details</a>
                                ||
                                @if (User.IsInRole("Administrator"))
                                {
                                    <a class="mx-2" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                }
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>
