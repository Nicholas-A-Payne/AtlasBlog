@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager



@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    <li class="nav-item">
        <a class="nav-link ps-lg-5 py-3 py-lg-4 text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @user.FullName</a>
    </li>
    <li class="nav-item">
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link px-lg-2 py-2 py-lg-4 text-light">Logout</button>
        </form>
    </li>
}

else
{
    <li class="nav-item">
        <a class="nav-link ps-lg-5 py-3 py-lg-4 text-light" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link px-lg-2 py-3 py-lg-4 text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}



